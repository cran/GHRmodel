	number = {6},
	urldate = {2025-08-07},
	journal = {Clinical Trials},
	author = {Chen, Ziming and Berger, Jeffrey S and Castellucci, Lana A and Farkouh, Michael and Goligher, Ewan C and Hade, Erinn M and Hunt, Beverley J and Kornblith, Lucy Z and Lawler, Patrick R and Leifer, Eric S and Lorenzi, Elizabeth and Neal, Matthew D and Zarychanski, Ryan and Heath, Anna},
	month = dec,
